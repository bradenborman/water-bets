{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es6", "dom"],
    "jsx": "react",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "typeRoots": ["index.d.ts", "node_modules/@types"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  }
}
